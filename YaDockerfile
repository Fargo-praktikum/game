FROM node:14.17.0-alpine as build
WORKDIR /app
COPY . .
RUN npm install
RUN NODE_ENV=production npm run webpack-prod


FROM node:14.17.0-alpine
EXPOSE 5000
COPY --from=build /app/dist /app/dist
COPY --from=build /app/serverDist /app/serverDist
COPY --from=build /app/node_modules /app/node_modules
COPY --from=build /app/migrations /app/migrations
RUN npm i -g sequelize-cli
CMD sequelize db:migrate --migrations-path /app/migrations --url postgresql://postgres:newPassword@postgres:5432/fargo-cards ; node /app/serverDist/server.js
